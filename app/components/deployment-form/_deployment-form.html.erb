<%
=begin%>
   { point_location_id: :point_location_id },
        { contact: :contact_name },
        { state: :state_code },
        { agency: :agency },
        { deployment_date: :formatted_deployment_date },
        { recovery_date: :formatted_recovery_date } 
<%
=end%>

<div class='columns'>
  <div class='column is-half'>
    <%= form_for(@deployment) do |f| %>
    <%= form_errors_for(@deployment)%>
      <div class='field'>
      <%= f.label 'Contact', class: 'label' %>
        <div class='control select'>
            <%= collection_select(:deployment,
              :contact_id,
              Contact.all,
              :id,
              :full_name,
              prompt: true)
            %>
        </div>
      </div>
      <div class='field'>
      <%= f.label 'Recovery Contact', class: 'label' %>
        <div class='control select'>
            <%= collection_select(:deployment,
              :recovery_contact_id,
              Contact.all,
              :id,
              :full_name,
              prompt: true)
            %>
        </div>
      </div>
      <div class='field'>
        <%= f.label 'State', class: 'label' %>
        <div class='control select'>
          <%= collection_select(:deployment,
            :state_code,
            State.all,
            :id,
            :state_name,
            { prompt: true },
            { class: 'state-select' })
          %>
        </div>
      </div>
      <div class='field'>
        <%= f.label :agency, class: 'label' %>
        <div class='control'>
          <%= f.text_field :agency, class: 'input' %>
        </div>
      </div>
      <div class='field'>
        <%= f.label :deployment_date, class: 'label' %>
        <div class='control'>
          <%= f.date_field :deployment_date, class: 'input' %>
        </div>
      </div>
      <div class='field'>
        <%= f.label :recovery_date, class: 'label' %>
        <div class='control'>
          <%= f.date_field :recovery_date, class: 'input' %>
        </div>
      </div>
    <% end %>
  </div>
</div>