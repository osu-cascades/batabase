<div class='columns'>
  <div class='column is-half'>
    <%= form_for(@sample_unit) do |f| %>
    <%= form_errors_for(@sample_unit)%>
      <div class='field'>
        <%= f.label :site_code, class: 'label' %>
        <div class='control'>
          <%= f.text_field :site_code, class: 'input' %>
        </div>
      </div>
      <div class='field'>
        <%= f.label :grts, class: 'label' %>
        <div class='control'>
          <%= f.text_field :grts, class: 'input' %>
        </div>
      </div>
      <div class='field'>
        <%= f.label :agency, class: 'label' %>
        <div class='control'>
          <%= f.text_field :agency, class: 'input' %>
        </div>
      </div>
      <div class='field'>
        <%= f.label 'Broad Habitat Form', class: 'label' %>
        <div class='control select'>
          <%= collection_select(:sample_unit,
            :broad_habitat_form_id,
            BroadHabitat.all,
            :id,
            :label,
            prompt: true)
          %>
        </div>
      </div>

      <br />

      <h2 class='title is-4'>Detector Locations</h2>
      <hr />

      <%= f.fields_for :detector_locations do |df_form| %>
        <%= render 'detector_location_fields', f: df_form %>
      <% end %>

      <%= link_to_add_fields '<i class="fa fa-plus"></i>Detector Location'.html_safe, f, :detector_locations %>

      <hr />

      <div class='field'>
        <div class='control actions'>
          <%= f.submit class: 'button is-primary' %>
        </div>
      </div>
    <% end %>
  </div>
</div>