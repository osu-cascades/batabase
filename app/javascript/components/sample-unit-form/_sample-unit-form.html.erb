<div class='columns'>
  <div class='column is-half'>
    <%= form_for(@sample_unit) do |f| %>
      <div class='field'>
        <%= f.label :site_code, class: 'label' %>
        <div class='control'>
          <%= f.text_field :site_code, class: 'input' %>
        </div>
      </div>
      <div class='field'>
        <%= f.label :agency, class: 'label' %>
        <div class='control'>
          <%= f.text_field :agency, class: 'input' %>
        </div>
      </div>
      <div class='field'>
        <%= f.label 'Broad Habitat', class: 'label' %>
        <div class='control select'>
          <%= collection_select(:sample_unit,
            :broad_habitat_id,
            BroadHabitat.all,
            :id,
            :label,
            prompt: true)
          %>
        </div>
      </div>
      <div class='field'>
        <%= f.label 'Species Group', class: 'label' %>
        <div class='control select'>
          <%= collection_select(:sample_unit,
            :species_group_id,
            SpeciesGroup.all,
            :id,
            :label,
            prompt: true)
          %>
        </div>
      </div>

      <%= render_component('state-county-select', { f: f }) %>

      <div class='field'>
        <div class='control actions'>
          <button class='add-state-county button is-link'>Add State & County</button>
        </div>
      </div>

      <div class='field'>
        <div class='control actions'>
          <%= f.submit class: 'button is-primary' %>
        </div>
      </div>
    <% end %>
  </div>
</div>