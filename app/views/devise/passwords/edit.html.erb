<% label = 'Password'
  if @minimum_password_length
    label += " (#{@minimum_password_length} characters minimum)"
  end 
%>
<div class="container mt-3">
  <h2>Change your password</h2>
  <%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", label: label %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    <div class="d-flex justify-content-between">
      <div class="d-flex flex-column justify-content-around">
        <%= render "devise/shared/links" %>
      </div>
      <div class="d-flex flex-column justify-content-around">
        <%= f.submit "Change my password" %>
      </div>
    </div>
  <% end %>
</div>
