<% label = 'Password'
  if @minimum_password_length
    label += " (#{@minimum_password_length} characters minimum)"
  end 
%>
<div class="container mt-3">
  <h2>Edit <%= resource_name.to_s.humanize %></h2>
  <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", label: label %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    <%= f.password_field :current_password, autocomplete: "current-password" %>
    <%= f.submit "Update" %>
    <hr>
    <h3>Delete Account?</h3>
    <%= button_to "Yes delete my account!", { method: :delete, data: { confirm: "Are you sure?" } }, { class: "btn btn-danger" } %>
  <% end %>
</div>
