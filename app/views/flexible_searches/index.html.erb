<h1>Flexible Searches</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @flexible_searches.each do |flexible_search| %>
      <tr>
        <td><%= flexible_search.name %></td>
        <td><%= link_to 'Show', flexible_search %></td>
        <td><%= link_to 'Edit', edit_flexible_search_path(flexible_search) %></td>
        <td><%= link_to 'Destroy', flexible_search, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

