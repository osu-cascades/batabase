<% flash.each do |key, value| %>
  <div class="alert alert-<%= key %> notification is-link">
    <ul>
      <li>
        <%= value %>
        <a class="close" data-dismiss="alert" href="#">
          <span class="icon">
            <i class="far fa-times-circle"></i>
          </span>
        </a>
      </li>
    </ul>
  </div>
<% end %>
