<div class='columns'>
  <div class='column is-half'>
    <%= form_for(@broad_habitat_form) do |f| %>
      <div class='field'>
        <%= f.label :label, class: 'label' %>
        <div class='control'>
          <%= f.text_field :label, class: 'input' %>
        </div>
      </div>
      <div class='field'>
        <%= f.label 'Detection Target', class: 'label' %>
        <div class='control select'>
          <%= collection_select(:broad_habitat_form,
            :broad_habitat_id,
            BroadHabitat.all,
            :id,
            :label,
            prompt: true)
          %>
        </div>
      </div>
      <div class='field'>
        <div class='control actions'>
          <%= f.submit class: 'button is-primary' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
