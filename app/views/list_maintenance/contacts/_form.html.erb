<div class='columns'>
  <div class='column is-half'>
    <%= form_for(@contact) do |f| %>
      <div class='field'>
        <%= f.label :first_name, class: 'label' %>
        <div class='control'>
          <%= f.text_field :first_name, class: 'input' %>
        </div>
      </div>
      <div class='field'>
        <%= f.label :last_name, class: 'label' %>
        <div class='control'>
          <%= f.text_field :last_name, class: 'input' %>
        </div>
      </div>
      <div class='field'>
        <%= f.label :email, class: 'label' %>
        <div class='control'>
          <%= f.email_field :email, autocomplete: 'email', class: 'input' %>
        </div>
      </div>
      <div class='field'>
        <%= f.label 'Organization', class: 'label' %>
        <div class='control select'>
          <%= collection_select(:contact,
            :organization_id,
            Organization.all,
            :id,
            :label,
            prompt: true)
          %>
        </div>
      </div>
      <div class='field'>
        <%= f.label 'State', class: 'label' %>
        <div class='control select'>
          <%= collection_select(:contact,
            :state_id,
            State.all,
            :id,
            :state_name,
            prompt: true)
          %>
        </div>
      </div>
      <div class='field'>
        <div class='control actions'>
          <%= f.submit class: 'button is-primary' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
