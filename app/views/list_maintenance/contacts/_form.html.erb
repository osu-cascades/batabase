<div class='columns'>
  <div class='column is-half'>
    <%= form_for(@contact) do |f| %>
      <div class='field'>
        <%= f.label :first_name, class: 'label' %>
        <div class='control'>
          <%= f.text_field :first_name, class: 'input' %>
        </div>
      </div>
      <div class='field'>
        <%= f.label :last_name, class: 'label' %>
        <div class='control'>
          <%= f.text_field :last_name, class: 'input' %>
        </div>
      </div>
      <div class='field'>
        <%= f.label :email, class: 'label' %>
        <div class='control'>
          <%= f.email_field :email, autocomplete: 'email', class: 'input' %>
        </div>
      </div>
      <div class='field'>
        <%= f.label :organization, class: 'label' %>
        <div class='control'>
          <%= f.text_field :organization, class: 'input' %>
        </div>
      </div>
      <div class='field'>
        <%= f.label :state_code, class: 'label' %>
        <div class='control'>
          <%= f.text_field :state_code, class: 'input' %>
        </div>
      </div>
      <div class='field'>
        <div class='control actions'>
          <%= f.submit class: 'button is-primary' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
