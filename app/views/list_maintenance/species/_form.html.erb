<div class='columns'>
  <div class='column is-half'>
    <%= form_for(@specie) do |f| %>
      <div class='field'>
        <%= f.label :code, class: 'label' %>
        <div class='control'>
          <%= f.text_field :code, class: 'input' %>
        </div>
      </div>

      <div class='field'>
        <%= f.label :common_name, class: 'label' %>
        <div class='control'>
          <%= f.text_field :common_name, class: 'input' %>
        </div>
      </div>

      <div class='field'>
        <%= f.label :scientific_name, class: 'label' %>
        <div class='control'>
          <%= f.text_field :scientific_name, class: 'input' %>
        </div>
      </div>

      <div class='field'>
        <%= f.label :tsn, class: 'label' %>
        <div class='control'>
          <%= f.number_field :tsn, class: 'input' %>
        </div>
      </div>

      <div class='field'>
        <div class='control actions'>
          <%= f.submit class: 'button is-primary' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
