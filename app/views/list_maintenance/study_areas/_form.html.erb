<div class='columns'>
  <div class='column is-half'>
    <%= form_for(@study_area) do |f| %>
      <div class='field'>
        <%= f.label :name, class: 'label' %>
        <div class='control'>
          <%= f.text_field :name, class: 'input' %>
        </div>
      </div>

      <div class='field'>
        <%= f.label 'State', class: 'label' %>
        <div class='control select'>
          <%= collection_select(:study_area,
            :state_id,
            State.all,
            :id,
            :state_name,
            prompt: true)
          %>
        </div>
      </div>

      <div class='field'>
        <div class='control actions'>
          <%= f.submit class: 'button is-primary' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
