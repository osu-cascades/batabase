<p id="notice"><%= notice %></p>

<h1>Location Mappings</h1>

<% @location_mappings.each do |location_mapping| %>
    <section class="location_mapping">
        <div class="summary" style="float:left; display:flex; padding:2px; padding-right:10px;">
            <h2 style="margin-right:10px;"><%= link_to location_mapping.name, location_mapping %></h2>
            <span style="margin-right: 10px;">
                <%= button_to 'Edit', edit_location_mapping_path(location_mapping), class: 'btn btn-primary' %>
            </span>
            <span style="margin-right: 10px;">
                <%= button_to "Delete", location_mapping, class: 'btn btn-danger', method: :delete, data: { confirm: "Are you sure you want to delete this custom search?" } %>
            </span>
            <p></p>
        </div>
    </section> 
<% end %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @location_mappings.each do |location_mapping| %>
      <tr>
        <td><%= location_mapping.name %></td>
        <td><%= link_to 'Show', location_mapping %></td>
        <td><%= link_to 'Edit', edit_location_mapping_path(location_mapping) %></td>
        <td><%= link_to 'Destroy', location_mapping, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= search_form_for @search do |f| %>
  <%= f.condition_fields do |c| %>
    <%= render "condition_fields", f: c %>
  <% end %>
  <p><%= link_to_add_fields "Add Conditions", f, :condition %></p>
  <div class="actions"><%= f.submit "Search" %></div>
<% end %>


