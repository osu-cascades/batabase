<%= render_component('page') do %>
  <%= render_component('index-header', { resource: 'Sample Unit', path:  new_sample_unit_path }) %>

  <%= render_component(
    'index-table',
    { resources: @sample_units,
      attributes: [
        { site_code: :site_code },
        { grts: :grts },
        { state: :primary_state },
        { county: :primary_county },
        { agency: :agency }
      ],
      view_link: true
    }
  )%>

  <%= paginate @sample_units %>

<% end %>
